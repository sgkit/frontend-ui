{
  "version": "0.03",
  "app": {
    "src": "./src/",
    "build": "deploy/",
    "startpage": "index.html"
  },
  "layouts": {
    "src": "src/layouts/",
    "srcFiles": [
      "./src/layouts/*.html",
      "./src/layouts/admin/**/*.html"
    ],
    "dest": "./src/",
    "notification": true,
    "inc": "src/layouts/inc/*.html",
    "apps": "../app/"
  },
  "repo": {
    "url": "",
    "user": "",
    "password": ""
  },
  "browserSync": {
    "baseDir": "./src",
    "indexPage": "index.html",
    "files": [
      "**/*.html",
      "inc/**.html",
      "./src/ui/components/**/*.html",
      "./src/ui/elements/**/*.html",
      "./src/ui/assets/css/**/*.css"
    ],
    "proxy": "",
    "port": "8000",
    "logLevel": "debug",
    "timestamp": true
  },
  "bower": {
    "install_dir": "package/"
  }
}
